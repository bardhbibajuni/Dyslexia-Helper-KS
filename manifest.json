{
    "manifest_version": 3,
    "name": "Dyslexia Helper",
    "version": "1.0",
    "description": "Make websites easier to read with dyslexia-friendly fonts, spacing, and soft background colors.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/OpenDyslexic-Regular.otf",
                "fonts/Lexend-Regular.ttf"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
